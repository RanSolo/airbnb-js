extends ../shared/template

block content
 .row
    .small-4.columns
      form(action='/register', method='post')
        fieldset
          legend Register
          .row
            .small-12.columns
              label Email
              input(name='email', type='email', autofocus=true)
          .row
            .small-12.columns
              label Password
              input(name='password', type='password')
          .row
            .small-12.columns
              select(name='role', required='true')
                option Host
                option Guest
          .row
            .small-12.columns
              button.small.radius Register
    .small-4.columns
      form(action='/login', method='post')
        fieldset
          legend Login
          .row
            .small-12.columns
              label Email
              input(name='email', type='text')
          .row
            .small-12.columns
              label Password
              input(name='password', type='password')
          .row
            .small-12.columns
              button.small.radius.alert Login
    .small-4.columns

